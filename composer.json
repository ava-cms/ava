{
    "name": "avacms/ava",
    "description": "Addy's Very Adaptable CMS - A flat-file PHP CMS",
    "type": "project",
    "license": "GPL-3.0-or-later",
    "bin": ["ava"],
    "require": {
        "php": "^8.3",
        "league/commonmark": "^2.6",
        "symfony/yaml": "^7.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Ava\\": "core/",
            "App\\": "app/src/"
        },
        "exclude-from-classmap": [
            "core/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Ava\\Tests\\": "core/tests/"
        }
    },
    "scripts": {
        "ava": "php ava"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
